<Page x:Class="salemanagementApp.quanlyusers.QL_users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:salemanagementApp.quanlyusers"
      mc:Ignorable="d"
      Title="Quản lý người dùng" Height="450" Width="800">
    <Page.Resources>
        <!-- Menu Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Menu Panel -->
        <Border Grid.Column="0" Background="#2c3e50">
            <DockPanel LastChildFill="False">
                <TextBlock DockPanel.Dock="Top" Text="QUẢN LÝ NGƯỜI DÙNG" 
                           Foreground="White" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,20,0,30"/>

                <StackPanel DockPanel.Dock="Top">
                    <Button x:Name="btnDangKy" Content="Đăng ký tài khoản" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnDangNhap" Content="Đăng nhập/Đăng xuất" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnQuenMatKhau" Content="Quên mật khẩu" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnHoSoCaNhan" Content="Quản lý hồ sơ cá nhân" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnPhanQuyen" Content="Phân quyền người dùng" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnDanhSach" Content="Quản lý danh sách người dùng" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnTimKiem" Content="Tìm kiếm, lọc người dùng" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnEmail" Content="Gửi email thông báo" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>

                    <Button x:Name="btnSocialLogin" Content="Đăng nhập Google/Facebook" 
                            Style="{StaticResource MenuButtonStyle}" Click="NavigationButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#ecf0f1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#ddd">
                <Grid>
                    <TextBlock x:Name="txtPageTitle" Text="Quản lý danh sách người dùng" 
                               FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" 
                               Margin="20,0,0,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                        <Button Content="Thông báo" Margin="0,0,10,0" Padding="10,5" 
                                Background="Transparent" BorderThickness="1" BorderBrush="#ddd"/>
                        <Button Content="Cài đặt" Padding="10,5" 
                                Background="Transparent" BorderThickness="1" BorderBrush="#ddd"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <!-- Danh sách người dùng -->
                <Grid x:Name="gridDanhSachNguoiDung" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBox Width="300" Height="35" Padding="10,0" VerticalContentAlignment="Center" 
                                     BorderBrush="#ddd" BorderThickness="1" Margin="0,0,10,0"/>
                            <Button Content="Tìm kiếm" Height="35" Width="65" Background="#3498db" 
                                    Foreground="White" BorderThickness="0"/>
                        </StackPanel>

                        <Button Content="Thêm người dùng" Height="35" Width="105" 
                                Background="#2ecc71" Foreground="White" BorderThickness="0" HorizontalAlignment="Left" Margin="396,0,0,0"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" x:Name="dgUsers" AutoGenerateColumns="False" 
                              IsReadOnly="True" BorderThickness="1" BorderBrush="#ddd" 
                              RowBackground="White" AlternatingRowBackground="#f9f9f9"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#eee"
                              CanUserAddRows="False" CanUserDeleteRows="False" 
                              CanUserReorderColumns="False" CanUserResizeRows="False"
                              HeadersVisibility="Column" RowHeight="40" SelectionChanged="dgUsers_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="auto" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Họ và tên" Width="auto" Binding="{Binding FullName}"/>
                            <DataGridTextColumn Header="Tên đăng nhập" Width="auto" Binding="{Binding Username}"/>
                            <DataGridTextColumn Header="Email" Width="180" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="Số điện thoại" Width="120" Binding="{Binding Phone}"/>
                            <DataGridTextColumn Header="Vai trò" Width="100" Binding="{Binding Role}"/>
                            <DataGridTextColumn Header="Trạng thái" Width="100" Binding="{Binding Status}"/>
                            <DataGridTemplateColumn Header="Thao tác" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Sửa" Width="60" Height="30" Margin="0,0,5,0" 
                                                    Background="#3498db" Foreground="White" BorderThickness="0"/>
                                            <Button Content="Xóa" Width="60" Height="30" 
                                                    Background="#e74c3c" Foreground="White" BorderThickness="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

