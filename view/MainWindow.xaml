<Window x:Class="salemanagementApp.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:salemanagementApp.view"
        mc:Ignorable="d"
        Title="Hệ Thống Quản Lý Bán Hàng" Height="700" Width="1100">
    <Window.Resources>
        <!-- Menu Button Style -->
        <Style x:Key="MainMenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Background" Value="#f5f5f5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="&#xE700;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           VerticalAlignment="Center"
                                           Margin="5,0,10,0"/>

                                <ContentPresenter Grid.Column="1" 
                                                  HorizontalAlignment="Left" 
                                                  VerticalAlignment="Center" 
                                                  Content="{TemplateBinding Content}"/>

                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                           VerticalAlignment="Center"
                                           Margin="5,0,5,0"
                                           Foreground="#666"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e9e9e9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#d0d0d0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Selected Menu Button Style -->
        <Style x:Key="SelectedMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MainMenuButtonStyle}">
            <Setter Property="Background" Value="#e3f2fd"/>
            <Setter Property="BorderBrush" Value="#2196f3"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50">
            <Grid>
                <TextBlock Text="HỆ THỐNG QUẢN LÝ BÁN HÀNG" 
                           Foreground="White" FontSize="22" FontWeight="Bold" 
                           VerticalAlignment="Center" HorizontalAlignment="Left"
                           Margin="20,0,0,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Button Content="Thông báo" Margin="0,0,10,0" Padding="10,5" 
                            Background="Transparent" Foreground="White" BorderThickness="1" BorderBrush="#3a546a"/>
                    <Button Content="Cài đặt" Padding="10,5" 
                            Background="Transparent" Foreground="White" BorderThickness="1" BorderBrush="#3a546a"/>
                    <Button Content="Đăng xuất" Margin="10,0,0,0" Padding="10,5" 
                            Background="#e74c3c" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Menu Panel -->
            <Border Grid.Column="0" Background="White" BorderThickness="0,0,1,0" BorderBrush="#ddd">
                <DockPanel LastChildFill="True">
                    <TextBlock DockPanel.Dock="Top" Text="MENU CHÍNH" 
                               Foreground="#666" FontSize="14" FontWeight="SemiBold" 
                               Margin="20,20,0,10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10,0,10,20">
                            <CheckBox Margin="10,5,0,5" VerticalAlignment="Center" Visibility="Collapsed"/>

                            <Button x:Name="btnUserManagement" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Quản lý người dùng" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnProductManagement" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Quản lý sản phẩm &amp; danh mục" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnCartPayment" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Giỏ hàng &amp; Thanh toán" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnOrderManagement" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Quản lý đơn hàng" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnInventoryManagement" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Quản lý kho hàng" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnReportsStatistics" Style="{StaticResource SelectedMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Báo cáo &amp; Thống kê" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnCustomerSupport" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Đánh giá &amp; Hỗ trợ khách hàng" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnPromotionMarketing" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Quản lý khuyến mãi &amp; Marketing" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnSystemConfig" Style="{StaticResource MainMenuButtonStyle}" 
                                    Click="NavigateToModule">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Hệ thống &amp; Cấu hình" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" Background="#f9f9f9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Content Header -->
                <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#ddd">
                    <Grid>
                        <TextBlock x:Name="txtContentTitle" Text="Báo cáo &amp; Thống kê" 
                                   FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" 
                                   Margin="20,0,0,0"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                            <TextBox Width="250" Height="35" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,10,0" Text="Tìm kiếm..." GotFocus="RemovePlaceholderText" LostFocus="AddPlaceholderText"/>
                            <Button Content="Tìm kiếm" Height="35" Width="100" Background="#3498db" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content Frame -->
                <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="20"/>
            </Grid>
        </Grid>
    </Grid>
</Window>

