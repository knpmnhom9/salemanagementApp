<Page x:Class="salemanagementApp.view.EditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:salemanagementApp.view"
      Title="Chỉnh sửa người dùng">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Chỉnh sửa người dùng" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Họ tên:" />
            <TextBox x:Name="txtFullName" Margin="0,5"/>

            <TextBlock Text="Tên đăng nhập:" />
            <TextBox x:Name="txtUsername" Margin="0,5"/>

            <TextBlock Text="Email:" />
            <TextBox x:Name="txtEmail" Margin="0,5"/>

            <TextBlock Text="Số điện thoại:" />
            <TextBox x:Name="txtPhone" Margin="0,5"/>

            <TextBlock Text="Vai trò:" />
            <TextBox x:Name="txtRole" Margin="0,5"/>

            <TextBlock Text="Trạng thái:" />
            <TextBox x:Name="txtStatus" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Lưu" Click="SaveButton_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Huỷ" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Page>
