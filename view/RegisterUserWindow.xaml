<Page x:Class="salemanagementApp.view.RegisterUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Đăng ký người dùng">

    <Grid Margin="20">
        <!-- Tên đầy đủ -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontWeight="Bold" Text="Tên đầy đủ:"/>
        <TextBox x:Name="txtFullName" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,30,10,0" Height="30"/>

        <!-- Tên đăng nhập -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" FontWeight="Bold" Text="Tên đăng nhập:"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,90,10,0" Height="30"/>

        <!-- Email -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" FontWeight="Bold" Text="Email:"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,150,10,0" Height="30"/>

        <!-- Số điện thoại -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0" FontWeight="Bold" Text="Số điện thoại:"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,210,10,0" Height="30"/>

        <!-- Vai trò -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,250,0,0" FontWeight="Bold" Text="Vai trò:"/>
        <ComboBox x:Name="cboRole" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,270,10,0" Height="30">
            <ComboBoxItem Content="Quản trị viên"/>
            <ComboBoxItem Content="Nhân viên"/>
            <ComboBoxItem Content="Khách hàng"/>
        </ComboBox>

        <!-- Trạng thái -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,310,0,0" FontWeight="Bold" Text="Trạng thái:"/>
        <ComboBox x:Name="cboStatus" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,330,10,0" Height="30">
            <ComboBoxItem Content="Hoạt động"/>
            <ComboBoxItem Content="Khóa"/>
        </ComboBox>

        <!-- Nút Đăng ký -->
        <Button Content="Đăng ký" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="120" Height="40" Margin="0,10,0,0" Click="btnRegister_Click"/>
    </Grid>
</Page>
